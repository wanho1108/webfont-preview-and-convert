{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "upload/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/upload/(.*)", "dest": "/upload/$1" },
    { "src": "/(.*)", "dest": "/dist/index.js" }
  ]
}